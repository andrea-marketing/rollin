<div class="container">
  <div class="row mt-4">
    <div class="col">
        <h3> Create a new vehicle </h3>
         <%= simple_form_for(@vehicle) do |f| %>
          <%= f.input :name, placeholder: 'Blue Performance Kayak' %>
          <%= f.input :vehicle_type, collection: Vehicle::CATEGORIES , placeholder: 'Bike' %>
          <%= f.input :price, placeholder: '20' %>
          <%= f.input :address, placeholder: 'Marseille',
                      input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                      wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
          <%= f.input :description %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-info' %>
        <% end %>
    </div>
  </div>
</div>
